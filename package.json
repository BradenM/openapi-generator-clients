{
  "name": "openapi-generator-clients",
  "type": "module",
  "version": "0.1.0",
  "author": "Braden Mars <bradenmars@bradenmars.me>",
  "private": true,
  "packageManager": "pnpm@7.26.3",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "pnpm:devPreinstall": "is-ci || pnpm exec simple-git-hooks || pnpm dlx simple-git-hooks",
    "build": "pnpm -r -F packages/* run build",
    "dev": "pnpm -r -F packages/* --parallel run dev",
    "lint": "xo .",
    "lint:fix": "xo --fix .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/ni": "^0.19.0",
    "@atao60/fse-cli": "^0.1.7",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/node": "^18.11.19",
    "fs-extra": "^11.1.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "pnpm": "7.27.0-0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.1",
    "vitest": "^0.28.4",
    "webpack": ">=1.11.0",
    "xo": "^0.53.1"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "node",
      "es2022"
    ],
    "semicolon": false,
    "rules": {
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "interface"
      ],
      "@typescript-eslint/naming-convention": "warn",
      "import/extensions": "off",
      "n/prefer-global/process": "off",
      "no-template-curly-in-string": "warn",
      "@typescript-eslint/no-redeclare": "warn",
      "unicorn/no-await-expression-member": "warn"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{json,ts}": [
      "xo --fix"
    ]
  }
}
